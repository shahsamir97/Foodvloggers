<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="login"
            type="com.samir.foodvloggers.LoginViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/image_vieew"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:layout_gravity="center_horizontal"
                android:baselineAligned="false"
                android:scaleType="fitCenter"
                android:src="@drawable/background_image_upper" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="349dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/email_login_input_field"
                android:hint="@string/email_field_string"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="343dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/password_login_input_field"
                android:hint="@string/password_field_string"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/credential_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credential_warning"
                android:textColor="@android:color/holo_red_dark"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="155dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@drawable/login_button" />

            <Button
                android:id="@+id/google_signIn_button"
                android:layout_width="211dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/signin_with_google_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Create a new account"
                android:textColor="@color/colorPrimary"
                android:textSize="19dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</layout>
